---
import Footer from '../components/Footer.astro';
import AnsiText from '../components/Header';
import Navbar from '../components/Navbar';
import ProjectWindow from '../components/ProjectWindow';
import FancyTerminal from '../components/Terminal';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro - Projects</title>
	</head>
	<body class="fade">
        <Navbar/>
		<div class="mt-10">
            <AnsiText message='projects'/>
        </div>
        <div class="flex flex-row flex-wrap justify-center">
            <ProjectWindow title='FluidPyPLC'/>
            <ProjectWindow title='Mountain First Aid'/>
            <ProjectWindow title='My Portfolio'/>
            <ProjectWindow title='E-commerce Angular + Spring Boot'/>
        </div>
		<div class="flex flex-col flex-1">
            <FancyTerminal client:only/>
		</div>
	</body>
	<Footer/>
</html>

<style>
	h1 {
		padding-left: 10px;
	}
	body {
		background-color: #1e1e1e; /* Set the background color to match the terminal */
		color: #d4d4d4; /* Set the text color */
		font-family: monospace; /* Set the font family to monospace */
		user-select: none;
	}
    .fade-enter, .fade-leave-to {
		opacity: 0;
		transition: opacity 0.9s ease-in-out;
	}
</style>